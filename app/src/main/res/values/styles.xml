<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorAccent">@color/light_background</item>
    </style>

    <style name="PinkBig">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PinkSmall" parent="PinkBig">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="GreySmall" parent="PinkBig">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>


    <style name="EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:layout_marginTop">@dimen/activity_middle_margin</item>
    </style>

    <style name="ButtonPink">
        <item name="android:textColor">@color/light_background</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:paddingLeft">@dimen/activity_big_margin</item>
        <item name="android:paddingRight">@dimen/activity_big_margin</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
