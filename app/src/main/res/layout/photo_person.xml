<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/girl"
        android:tint="#d2000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ltBottom"
        android:gravity="center">

        <ImageView
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:src="@drawable/mask" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ltBottom"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="#c8050505">

        <ImageView
            android:id="@+id/ivFlash"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_extra_big_margin"
            android:adjustViewBounds="true"
            android:src="@drawable/flash" />

        <ImageView
            android:id="@+id/ivPhotoSel"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/photo_sel" />

        <ImageView
            android:id="@+id/ivRevCamera"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_extra_big_margin"
            android:adjustViewBounds="true"
            android:src="@drawable/rev_cam" />

    </RelativeLayout>

</RelativeLayout>
